#!/usr/bin/env bash
#Install NGINX Web Server
sudo apt-get update
sudo apt-get -y install nginx ufw
#Setup ufw configuration
sudo ufw allow 'Nginx Full'
sudo ufw allow ssh
#Setup basic server configuration
sudo echo "server {
        listen 80;
        server_name _;

        root /var/www/html;
        index index.html;

        location / {
                index.html;
        }
}" > /etc/nginx/sites-available/default
#Create index.html page
sudo echo "Hello World!" > /var/www/html/index.html