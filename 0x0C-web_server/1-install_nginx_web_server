#!/usr/bin/env bash
#Install NGINX Web Server
sudu su
apt-get update
apt-get -y install nginx ufw
#Setup ufw configuration
ufw allow 'Nginx Full'
ufw allow ssh
#Setup basic server configuration
echo "server {
        listen 80;
        server_name _;

        root /var/www/html;
        index index.html;

        location / {
                index.html;
        }
}" > /etc/nginx/sites-available/default
#Create index.html page
echo 'Hello World!' > /var/www/html/index.html